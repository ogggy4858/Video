    <link href="~/Common/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Common/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Common/css/flexslider.css" rel="stylesheet" />
    <link href="~/Common/css/custom-styles.css" rel="stylesheet" />
