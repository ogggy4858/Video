@model Data.DTO.PeopleInfomationDTO

@{
    ViewBag.Title = "EditInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using (Html.BeginForm("EditInfo", "People", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <a href="~/People/EditPass/@Model.Id" class="a-padding">Thay Mật Khẩu</a>
    <table class="table">

        <tr>
            <th>
                Họ Và Tên
            </th>
            <td>
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <th>
                Avatar
            </th>
            <td>
                <input type="file" name="image">
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thay Đổi" class="btn btn-default" />
                    </div>
                </div>
            </td>
        </tr>
    </table>

}
