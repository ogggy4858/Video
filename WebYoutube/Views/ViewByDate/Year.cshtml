
@{
    ViewBag.Title = "Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listYear = (List<int>)ViewBag.ListYear;
}

@section js{
    <script src="~/Common/js/year.js"></script>
}

@section css{
    <link href="~/Common/css/year.css" rel="stylesheet" />
}
    <div class="row">
        <div class="span2"></div>

        <div class="span8">
            @foreach (var item in listYear)
            {
                <a href="~/ViewByDate/Month/@item" style="text-decoration: none;">
                    <div class="month">
                        <ul>
                            <li>
                                <span style="font-size:22px;">@item</span>
                            </li>
                        </ul>
                    </div>
                </a>
                <div style="height: 20px;"></div>
            }
        </div>

        <div class="span2"></div>
    </div>