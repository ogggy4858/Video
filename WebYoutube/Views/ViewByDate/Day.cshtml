
@{
    ViewBag.Title = "Day";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<int> list = (List<int>)ViewBag.ListDay;
    List<Data.Framework.Post> listPost = (List<Data.Framework.Post>)ViewBag.ListVideoFirst;
    var idd = (string)ViewBag.ID;


    var ListPostCategory = (List<Data.Framework.PostCategory>)ViewBag.ListPostCategory;
    var listNews = (List<Data.DTO.ListNewsDTO>)ViewBag.ListNews;

}

@section css{
    <link href="~/Common/css/News2.css" rel="stylesheet" />
}
    <div class="row">
        <div class="span3 sidebar page-left-sidebar">
            <h6 class="title-bg" style="margin-top: 0px;">Danh Mục</h6>
            <ul class="post-category-list">
                @foreach (var item in ListPostCategory)
                {
                    <li><a href="~/PostCategory2/Details/@item.ID"><i class="icon-plus-sign"></i>@item.Name</a></li>
                }
            </ul>

            <br>
            <h6 class="title-bg">Bảng Tin</h6>
            <ul class="popular-posts">
                @foreach (var item in listNews)
                {
                    <li>
                        <a href="~/News2/Details/@item.ID">
                            <img src="~/Common/img/@item.Image" style="width: 70px; height: 70px;" alt="Popular Post">
                        </a>
                        <h6>
                            <a href="~/News2/Details/@item.ID" style="text-transform: none; font-weight: bold">@item.Title</a>
                            <br>
                            <em style="text-transform: none;">Ngày đăng: @Convert.ToDateTime(item.CreateDate).ToShortDateString()</em>
                        </h6>

                    </li>
                }
            </ul>


        </div>

        <div class="span9 sidebar page-left-sidebar">

            <div class="pagination">
                <ul>
                    @for (int i = 0; i < list.Count; i++)
                    {
                        string id = idd + "-" + list[i];

                        if (i == 0)
                        {
                            <li class="active">
                                <a href="">Ngày @list[i]</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="~/ViewByDate/EachDay/@id">
                                    @list[i]
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
            <br>
            @foreach (var item in listPost)
            {
                <div class="row">
                    <div class="span2">
                        <img src="~/Common/img/@item.Poster" alt="Gallery">
                    </div>
                    <div class="span6">
                        <div class="rela">
                            <span class="titleSpan">
                                <a href="~/Post/Show/@item.ID" class="colorTitle">@item.Title</a>
                            </span>
                           
                            <br>
                            Ngày đăng: <b> @Convert.ToDateTime(@item.CreateDate).ToShortDateString() </b>
                            <br>
                    
                            <br>
                            <a href="~/Post/Show/@item.ID">
                                Xem Thêm
                            </a>
                        </div>
                        
                    </div>
                    
                </div>
            }


            <div class="pagination">
                <ul>
                    @for (int i = 0; i < list.Count; i++)
                    {
                        string id = idd + "-" + list[i];

                        if (i == 0)
                        {
                            <li class="active">
                                <a href="">Ngày @list[i]</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="~/ViewByDate/EachDay/@id">
                                    @list[i]
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>